FROM alpine:3.10

ARG BUILD_DATE
ARG VCS_REF
ARG VERSION

LABEL \
    org.opencontainers.image.vendor="The Goofball - goofball222@gmail.com" \
    org.opencontainers.image.url="https://github.com/goofball222/pritunl" \
    org.opencontainers.image.title="Pritunl Server" \
    org.opencontainers.image.version=$VERSION \
    org.opencontainers.image.source="https://github.com/goofball222/pritunl.git" \
    org.opencontainers.image.revision=$VCS_REF \
    org.opencontainers.image.created=$BUILD_DATE \
    org.opencontainers.image.licenses="Apache-2.0"

ENV \
    DEBUG=false \
    GOPATH="/go" \
    GOPROXY="https://goproxy.cn,direct" \
    GOCACHE="/tmp/gocache" \
    PRITUNL_OPTS= \
    REVERSE_PROXY=false \
    WIREGUARD=false

WORKDIR /opt/pritunl

ADD root /

RUN set -x \
    && sed -i 's/dl-cdn.alpinelinux.org/mirrors.aliyun.com/g' /etc/apk/repositories \
    && apk add  --no-cache --virtual .build-deps \
        bzr curl gcc git go libffi-dev linux-headers \
        make musl-dev openssl-dev python2-dev py-pip \
    && apk add  --no-cache \
        bash ca-certificates iptables ip6tables \
        openssl openvpn procps py2-setuptools \
        py2-dnspython tzdata wireguard-tools \
    && pip install -i http://pypi.douban.com/simple --trusted-host --upgrade pip \
    && go get github.com/pritunl/pritunl-web \
    && cp /go/bin/* /usr/bin \
    && cd /tmp \
    && curl -sSL https://github.com/pritunl/pritunl/archive/${VERSION}.tar.gz -o /tmp/${VERSION}.tar.gz \
    && tar -zxf /tmp/${VERSION}.tar.gz \
    && cd /tmp/pritunl-${VERSION} \
    && python2 setup.py build \
    && pip install -r requirements.txt \
    && mkdir -p /var/lib/pritunl \
    && python2 setup.py install \
    && apk del  --purge .build-deps \
    && rm -rf /go /root/.cache/* /tmp/* /var/cache/apk/*

EXPOSE 80/tcp 443/tcp 1194/tcp 1194/udp 1195/udp 9700/tcp

ENTRYPOINT ["docker-entrypoint.sh"]

CMD ["pritunl"]
